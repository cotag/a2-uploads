{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": false,
        "sourceMap": true,
        "target": "es5",
        "outDir": "./dist",
        "lib": [
            "dom",
            "es6"
        ],
        "types": [
            "hammerjs",
            "jasmine",
            "node",
            "protractor",
            "selenium-webdriver",
            "source-map",
            "uglify-js",
            "webpack"
        ]
    },
    "files": [
        "dist/index.ts"
    ],
    "exclude": [
      "node_modules",
      "_build",
      "src",
      "dist",
      "index.ts"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": { "rewriteTsconfig": false }
}
